SHELL := /bin/bash
.SHELLFLAGS = -ec
.ONESHELL:
.SILENT:

.PHONY: help
help:
	echo "‚ùì Utiliser \`make <target>' o√π <target> peut √™tre"
	grep -E '^\.PHONY: [a-zA-Z0-9_-]+ .*?## .*$$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = "(: |##)"}; {printf "\033[36m%-30s\033[0m %s\n", $$2, $$3}'

.PHONY: demo  ## üêç lance les applications du TP7 dans docker-compose pour faire une d√©mo des strat√©gies d'exposition
demo:
	docker-compose up --remove-orphans
